<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Archetype Created Web Application</display-name>


  <servlet>
    <servlet-name>InvoiceServlet</servlet-name>
    <servlet-class>com.example.servlet.InvoiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InvoiceServlet</servlet-name>
    <url-pattern>/create-invoice</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteServlet</servlet-name>
    <servlet-class>com.example.servlet.deleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteServlet</servlet-name>
    <url-pattern>/delete-invoice</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>updateServlet</servlet-name>
    <servlet-class>com.example.servlet.updateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateServlet</servlet-name>
    <url-pattern>/update-invoice</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TransactionsServlet</servlet-name>
    <servlet-class>com.example.servlet.TransactionsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TransactionsServlet</servlet-name>
    <url-pattern>/transactions</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrdersServlet</servlet-name>
    <servlet-class>com.example.servlet.OrdersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrdersServlet</servlet-name>
    <url-pattern>/orders</url-pattern>
  </servlet-mapping>



  <!-- Database connection resource reference -->
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/demo</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
